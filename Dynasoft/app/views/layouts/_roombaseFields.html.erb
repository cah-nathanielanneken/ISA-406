<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@roombase) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :location %>
        <%= f.text_field :location, class: 'form-control' %>

        <%= f.label :maxOccupancy %>
        <%= f.text_field :maxOccupancy, class: 'form-control' %>

        <%= f.label :activated %>
        <div class="radio">
          <%= f.radio_button :activated, true, class: 'form-control' %>
          <%= label :activated_yes, 'Yes', :value => "true" %>
        </div>
        <div class="radio">
          <%= f.radio_button :activated, false, class: 'form-control' %>
          <%= label :activated_no, 'No', :value => "false" %>
        </div>

        <%= f.submit yield(:submitName), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>